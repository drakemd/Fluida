<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kerapatan oksigen semakin tinggi semakin tipis, itu dimanfaatkan oleh para alet untuk berlatih didataran tinggi (daerah pegunungan). Tujuannya untuk melatih darah bekerja lebih keras menghirup O2 dengan kerapatan yang tipis. Sehingga ketika bertanding di dataran rendah, darah sudah terbiasa bekerja keras dan O2 yang dihirup sangat banyak, hasilnya atlet lebih berstamina."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:textSize="17sp"
        android:padding="15dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="270dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/slide1a"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Berbeda dengan pada saat berada di dalam pesawat, kita tidak akan merasakan gejala seperti naik gunung atau ketika berlari di dataran tinggi. Karena pesawat dirancang dengan bahan dan desain agar tekanan udara di dalam kabin pesawat diisolasi dari tekanan udara luar. Tetapi pada ketinggian 40.000 feet tekanan udara di dalam jauh lebih besar dari pada di luar, maka ada katup khusus untuk menurunkan tekanan didalam kabin. Sehingga sedikit demi sedikit tekanan dalam kabin diturunkan dan secara otomatis masker oksigen turun dari tempatnya dan harus dipergunakan oleh seluruh penumpang."
        android:textSize="17sp"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:gravity="center"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />
</android.support.constraint.ConstraintLayout>