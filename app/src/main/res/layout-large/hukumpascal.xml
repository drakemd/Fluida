<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Materi.HukumPascal.HukumPascal"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bg">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HUKUM PASCAL"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="300dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/pascal1"
            android:scaleType="fitXY"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/textView40"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pascal2"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMateriPascal" />

        <Button
            android:id="@+id/btnMateriPascal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materi Hukum Pascal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/btnbackground"
            android:theme="@style/PrimaryFlatButton"
            android:padding="20dp"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnAplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Hukum Pascal"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btnbackground"
            android:theme="@style/PrimaryFlatButton"
            android:padding="20dp"
            android:textSize="21sp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout_editor_absoluteY="-16dp"
            tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
