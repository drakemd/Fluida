<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pascal3tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Berdasarkan deskripsi di halaman sebelumnya, maka Hukum Pascal adalah 'Tekanan yang diberikan fluida dalam ruang yang tertutup akan diteruskan kesegala arah dengan sama besar'. Apakah isi dari Hukum Pascal tersebut sudah benar? Jelaskan jawabanmu!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:padding="15dp"
        android:drawableLeft="@drawable/pascalorang"
        android:drawablePadding="15dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/pascal3tv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Salah satu aplikasi Hukum Pascal pada prinsip kerja dongkrak hidrolik atau penggerak hidrolik, keuntungannya adalah dengan memberikan gaya yang kecil kita sanggup menggerakan benda yang massanya sangat besar. Bagaimana penjelasannya?"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/pascal3tv1"
        android:textSize="18sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Perhatikan animasi berikut"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/pascal3tv2"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <edu.upi.cs.sukidaa.fluida.CustomVideoView
        android:layout_width="375dp"
        android:layout_height="225dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView48"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/pascal3vv1"
        app:layout_constraintHorizontal_bias="0.085" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="-48dp"
        app:layout_constraintLeft_toLeftOf="@+id/pascal3vv1"
        app:layout_constraintRight_toRightOf="@+id/pascal3vv1"
        app:layout_constraintTop_toTopOf="@+id/pascal3vv1"
        app:srcCompat="@drawable/play"
        app:layout_constraintBottom_toBottomOf="@+id/pascal3vv1"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Tekanan yang pada piston 1 sama dengan tekanan pada piston 2, maka:"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/pascal3vv1"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.096" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/pascalrumus1"
        android:layout_marginTop="196dp"
        app:layout_constraintTop_toBottomOf="@+id/textView48"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView49"
        android:layout_marginLeft="12dp"
        app:layout_constraintHorizontal_bias="0.212" />

</android.support.constraint.ConstraintLayout>