<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tvSoal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Jari-jari penampang kecil dongkrak hidrolik adalah 2 cm dan jari-jari penampang besar adalah 25 cm. Gaya yang harus diberikan pada penampang kecil untuk mengangkat mobil bermassa 2000 kg adalahâ€¦."
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imgNomer"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:textSize="20sp"
        android:background="@android:color/holo_blue_light"
        android:padding="15dp"
        android:textColor="#ffff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imgNomer"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nomor10" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="a. 10 N"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSoal"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.03"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonB"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="b. 15 N"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.185" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="c. 20 N"
        android:textSize="18sp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSoal"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.814" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="d. 25 N"
        android:layout_marginRight="63dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.925" />

    <Button
        android:id="@+id/selesai"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginLeft="136dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="235dp"
        android:background="@drawable/btnbackground"
        android:text="Selesai"
        android:textSize="18sp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSoal" />
</android.support.constraint.ConstraintLayout>