<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/teksha71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="45dp"
        android:text="Untuk lebih memahami gaya apung, perhatikan eksperimen melalui animasi dibawah ini!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="375dp"
        android:layout_height="225dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/archimedes2"
        app:layout_constraintTop_toBottomOf="@+id/teksha71" />
    <ImageView
        android:id="@+id/backtable1"
        android:layout_width="495dp"
        android:layout_height="375dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/backtable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/archimedes2" />

    <TextView
        android:id="@+id/teksha72"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="Dari eksperimen di atas, diperoleh hasil pembacaan pada neraca dan berat dari gelas ukur dengan air yang dipindahkan. Buatlah tabel hasil pengematan untuk masing-masing tahapan!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/backtable1"
        app:layout_constraintRight_toRightOf="@+id/backtable1"
        app:layout_constraintTop_toTopOf="@+id/backtable1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="450dp"
        android:layout_height="225dp"
        android:background="@drawable/ha7image2"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/backtable1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/teksha72"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@+id/backtable1" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/archimedes2"
        app:layout_constraintLeft_toLeftOf="@+id/archimedes2"
        app:layout_constraintRight_toRightOf="@+id/archimedes2"
        app:layout_constraintTop_toTopOf="@+id/archimedes2"
        app:srcCompat="@drawable/play" />

</android.support.constraint.ConstraintLayout>