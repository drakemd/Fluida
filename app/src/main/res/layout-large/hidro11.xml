<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="49dp"
        android:text="Contoh Soal"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sebuah wadah berisi raksa dengan massa jenis 13.600 kg/m3 setinggi 76 cm. Hitunglah (a) Tekanan hidrostatis yang bekerja pada dasar wadah. (b) Jika raksa diganti air, hitunglah ketinggian air yang setara dengan raksa pada dasar wadah!"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonA"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:text="a. 10,36m"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:background="@drawable/btnsoal"
        android:layout_marginStart="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.089" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:text="b. 1,036m"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        app:layout_constraintLeft_toRightOf="@+id/buttonA"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:background="@drawable/btnsoal"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:text="c. 103,6m"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        app:layout_constraintLeft_toRightOf="@+id/buttonB"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:background="@drawable/btnsoal"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:text="d. 1036m"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        android:textSize="20sp"
        android:background="@drawable/btnsoal"
        app:layout_constraintLeft_toRightOf="@+id/buttonC"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/tryagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA"
        android:layout_marginLeft="30dp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btnbackground" />

    <Button
        android:id="@+id/solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solution"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/btnbackground"
        android:layout_marginRight="30dp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonD"/>

    <ImageView
        android:id="@+id/hidrosol1"
        android:layout_width="260dp"
        android:layout_height="190dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/solution"
        app:srcCompat="@drawable/quiz1"
        android:layout_marginLeft="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/hidrosol2"
        android:layout_width="260dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/quiz2"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hidrosol1" />
</android.support.constraint.ConstraintLayout>