<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/backsoal1"
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/backtable"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/soaltp12"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:text="Sebuah balok dengan sisi 0,1 m digantung vertikal dengan tali yang ringan (massa diabaikan), tentukan gaya apung yang dialami balok tersebut, jika (a) dicelupkan setengah bagian ke dalam air (ρ_air=1000 〖kg/m〗^3) dan (b) dicelupkan seluruhnya ke dalam minyak (ρ_minyak=800 〖kg/m〗^3)"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backsoal1"
            app:layout_constraintLeft_toLeftOf="@+id/backsoal1"
            app:layout_constraintRight_toRightOf="@+id/backsoal1"
            app:layout_constraintTop_toTopOf="@+id/backsoal1" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnsoal"
            android:text="a. 9,8 N dan 49 N"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backsoal1" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btnsoal"
            android:text="b. 98 N dan 7,85 N"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonA" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/btnsoal"
            android:text="c. 49 N dan 7,85 N"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/backsoal1"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/btnsoal"
            android:text="d. 4,9 N dan 7,85 N"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonC" />

        <Button
            android:id="@+id/solution"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:visibility="invisible"
            android:layout_marginTop="24dp"
            android:background="@drawable/btnbackground"
            android:text="Solution"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonD" />

        <Button
            android:id="@+id/tryagain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:background="@drawable/btnbackground"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="invisible"
            android:textColor="#ffff"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonB" />

        <ImageView
            android:id="@+id/solusi1"
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/tpsoal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solution" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>