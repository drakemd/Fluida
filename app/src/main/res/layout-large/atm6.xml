<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tvatm61"
        android:layout_height="wrap_content"
        android:text="Barometer selain raksa adalah barometer air dikenal dengan Termometer Goethe terdiri dari wadah kaca tertutup yang setengah terisi air dan terhubung pada cabang kecil (cerat)."
        android:textSize="19sp"
        android:padding="15dp"
        android:layout_width="400dp"
        android:gravity="center"
        android:background="@drawable/border_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvatm62"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Ketika tekanan atmosfer rendah, level air pada cerat perlahan akan naik melebihi permukaan air dalam wadah kaca. Bila level air di cerat turun, hal ini berarti tekanan atmosfer berubah menjadi lebih tinggi."
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvatm61"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp"
        android:textSize="19sp"
        android:gravity="center"
        android:background="@drawable/border_white"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berikut beberapa barometer air"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvatm62"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.503" />
    <ViewFlipper
        android:id="@+id/viewFlipperatm6"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <ImageView
            android:id="@+id/slide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/atm61"
            android:background="@drawable/atm61"/>
        <ImageView
            android:id="@+id/slide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/atm62"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/atm62"/>
        <ImageView
            android:id="@+id/slide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/atm63"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/atm63"/>

    </ViewFlipper>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:srcCompat="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintVertical_bias="0.6"
        android:background="@drawable/nextselect"
        app:layout_constraintLeft_toRightOf="@+id/viewFlipperatm6"
        android:layout_marginLeft="12dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:srcCompat="@color/transparent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintVertical_bias="0.6"
        android:background="@drawable/prevselect"
        app:layout_constraintRight_toLeftOf="@+id/viewFlipperatm6"
        android:layout_marginRight="12dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dari deskripsi di atas, bersama temanmu rancanglah sebuah barometer sederhana berbahan air!"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipperatm6"
        android:padding="15dp"
        android:textSize="20sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"/>
</android.support.constraint.ConstraintLayout>