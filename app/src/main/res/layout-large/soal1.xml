<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tvSoal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Suatu tempat memiliki ketinggian 500 m dari permukaan laut. Tentukan tekanan udara pada tempat tersebut!"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imgNomer"
        android:layout_marginRight="12dp"
        android:textSize="24sp"
        android:background="@android:color/holo_blue_light"
        android:padding="15dp"
        android:textColor="#ffff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imgNomer"
        android:layout_width="450dp"
        android:layout_height="105dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nomor1" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="a. 71 cmHg"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSoal"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonB"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="b. 72 cmHg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintHorizontal_bias="0.053"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="c. 73 cmHg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonB"
        android:layout_marginLeft="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnsoal"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonD"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="d. 74 cmHg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        android:layout_marginLeft="330dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnsoal"
        android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>