<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dari video posisi pesawat pada ketinggian di atas 40.000 feet, mengapa masker oksigen keluar secara otomatis dari tempat penyimpanannya dan seluruh penumpang pesawat diharuskan memakai masker oksigen tersebut?"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untuk menjawab pertanyaan-pertanyaan tersebut perhatikan animasi Toricelli berikut."
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="15dp"
        android:textSize="25sp" />

    <edu.upi.cs.sukidaa.fluida.CustomVideoView
        android:id="@+id/videoatm41"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:soundEffectsEnabled="true"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/videoatm41"
        app:layout_constraintLeft_toLeftOf="@+id/videoatm41"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoatm41"
        app:srcCompat="@drawable/play"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

</android.support.constraint.ConstraintLayout>