<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upi.cs.sukidaa.fluida.Latihan.Latihan"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan Soal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        android:textColor="#ffff"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/exam"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/textView68" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soal terdiri dari 10 soal pilihan ganda. Apabila jawaban benar seluruhnya, skor maksimum adalah 100. Kerjakan dengan teliti dan sendiri-sendiri"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView24"
        android:layout_marginLeft="12dp"
        android:textColor="#ffff"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_light"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        android:textSize="26sp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnMulaiLat"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Mulai"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView69"
        android:layout_marginRight="24dp"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btnbackground"
        android:theme="@style/PrimaryFlatButton"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
    <View android:layout_height="fill_parent"
        android:layout_width="fill_parent"></View>
</android.support.constraint.ConstraintLayout>
