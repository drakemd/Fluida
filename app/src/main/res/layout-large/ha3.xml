<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
">


    <TextView
        android:id="@+id/teksha31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="108dp"
        android:text="Untuk tahu berat benda di urada dan di air, coba perhatikan animasi berikut!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/archimedes1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="37dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teksha31" />

    <TextView
        android:id="@+id/teksha32"
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="Ketika batu dimasukkan ke dalam air, air mendorong kembali pada batu dengan gaya yang sama dengan berat air yang dipindahkan. Gaya ke atas yang di tunjukan oleh animasi disebut gaya apung (FA). Besar gaya apung (FA) sama dengan berat fluida (WF). yang dipindahkan. Seperti terlihat pada gambar di bawah ini: "
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/archimedes1" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/archimedes1"
        app:layout_constraintLeft_toLeftOf="@+id/archimedes1"
        app:layout_constraintRight_toRightOf="@+id/archimedes1"
        app:layout_constraintTop_toTopOf="@+id/archimedes1"
        app:srcCompat="@drawable/play" />

</android.support.constraint.ConstraintLayout>
