<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apabila kamu seorang arsitek, bagaimana bentuk konstruksi bendungan yang akan kamu buat berdasarkan konsep tekanan hidrostatis? Agar bendungan tersebut tidak jebol atau mampu menahan tekanan air, yang semakin bawah tekanannya semakin besar!"
        android:textSize="19sp"
        android:padding="15dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="300dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/hidrp10"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/hidro10tv1"
        android:layout_width="fill_parent"
        android:textSize="19sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/border_white"
        android:layout_height="wrap_content"
        android:text="Konstruksi bendungan semakin kebawah semakin tebal, tujuannya untuk menghindari jebolnya bagian bawah karena tekanan yang besar."
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Diskusikan bersama temanmu, apakah konstruksi bendungan untuk menahan air danau buatan sama dengan konstruksi bendungan untuk menahan air laut, pada kedalaman yang sama? Jelaskan jawabanmu!"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        android:textSize="19sp"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/hidro10tv1"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/hidro10tv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Selain kedalaman, tekanan hidrostatis juga bergantung pada massa jenis zat cairnya. Massa jenis air laut lebih besar dari pada massa jenis air danau (p(air laut) yaitu 1028kg/m3air yaitu 1000kg/m3. Sehingga konstruksi bendungan air laut juga harus lebih besar dari konstruksi bendungan air danau."
        android:layout_marginTop="12dp"
        android:textSize="19sp"
        android:padding="15dp"
        android:background="@drawable/border_white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView41"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>