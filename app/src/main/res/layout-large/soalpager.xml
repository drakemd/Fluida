<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Materi.TekananAtmosfer.TekananAtmosfer"
    android:orientation="vertical"
    android:weightSum="10">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="6"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnNo1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1"
                android:padding="5dp"
                android:background="@drawable/btnno"/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btnNo2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="6"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnNo6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
            <Button
                android:id="@+id/btnNo10"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="10"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnno"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
