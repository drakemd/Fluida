<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="480dp"
    android:layout_height="375dp"
    android:layout_marginTop="255dp"
    android:background="@drawable/dialogexit">

    <TextView
        android:id="@+id/tekskonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlekonfirmasi" />

    <ImageButton
        android:id="@+id/buttonyes"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/buttonyes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekskonfirmasi" />

    <ImageButton
        android:id="@+id/buttonno"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/buttonno"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekskonfirmasi" />

    <TextView
        android:id="@+id/titlekonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>