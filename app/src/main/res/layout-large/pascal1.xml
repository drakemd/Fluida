<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATERI HUKUM PASCAL"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent" />
    <edu.upi.cs.sukidaa.fluida.CustomVideoView
        android:layout_width="420dp"
        android:layout_height="255dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        android:id="@+id/pascal1vv1" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apa yang ingin kamu tanyakan dari video di atas?"
        android:layout_marginTop="67dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        android:textSize="27sp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/pascal1vv1"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/pascal1vv1"
        app:layout_constraintLeft_toLeftOf="@+id/pascal1vv1"
        app:layout_constraintRight_toRightOf="@+id/pascal1vv1"
        app:layout_constraintTop_toTopOf="@+id/pascal1vv1"
        app:srcCompat="@drawable/play" />
</android.support.constraint.ConstraintLayout>