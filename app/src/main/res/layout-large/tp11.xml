<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tekstp111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Perhatikan tabel nilai tegangan permukaan berikut!"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tp11image1"
        android:layout_width="525dp"
        android:layout_height="300dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tp11image1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekstp111" />

    <ImageView
        android:id="@+id/bgtp112"
        android:layout_width="525dp"
        android:layout_height="275dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backteks"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tp11image1" />

    <TextView
        android:id="@+id/tekstp112"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="Dari tabel nilai tegangan permukaan, terlihat bahwa suhu mempengaruhi nilai tegangan permukaan zat cair. Bagaimana umumnya hubungan antara suhu dengan nilai tegangan permukaan zat cair? Jelaskan hasil pengamatanmu!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/bgtp112"
        app:layout_constraintLeft_toLeftOf="@+id/bgtp112"
        app:layout_constraintRight_toRightOf="@+id/bgtp112"
        app:layout_constraintTop_toTopOf="@+id/bgtp112" />

    <TextView
        android:id="@+id/tekstp113"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgtp112" />
</android.support.constraint.ConstraintLayout>
</ScrollView>