<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pernahkah kalian melihat orang terjun payung? Apabila belum, Perhatikan video berikut!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <edu.upi.cs.sukidaa.fluida.CustomVideoView
        android:id="@+id/atm9videoview"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/tvatm91"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Penerjun payung membuka parasutnya saat ketinggiannya sudah mencapai 300 meter dari permukaan tanah."
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/atm9videoview"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:text="Dari mana ya, penerjun payung bisa tahu kalau ketinggiannya sudah mencapai 300 meter?"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvatm91"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:drawableLeft="@drawable/help50"
        android:drawablePadding="15dp"
        android:padding="15dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/atm9videoview"
        app:layout_constraintLeft_toLeftOf="@+id/atm9videoview"
        app:layout_constraintRight_toRightOf="@+id/atm9videoview"
        app:layout_constraintTop_toTopOf="@+id/atm9videoview"
        app:srcCompat="@drawable/play"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />
</android.support.constraint.ConstraintLayout>