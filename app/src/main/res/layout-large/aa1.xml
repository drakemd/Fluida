<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:text="Aplikasi Hukum Archimedes"
            android:textSize="37sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />
    <ImageButton
        android:id="@+id/aa1image1"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:background="@drawable/aa1image1"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginStart="24dp" />

    <ImageButton
        android:id="@+id/aa1image2"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/aa1image2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/teksaa11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hidrometer"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        app:layout_constraintTop_toBottomOf="@+id/aa1image1"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/aa1image1"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@+id/aa1image1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/teksaa12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jembatan Ponton"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/aa1image2"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@+id/aa1image2"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/aa1image2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:id="@+id/aa1image3"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/aa1image3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teksaa11"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/aa1image4"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/aa1image4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teksaa12"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/teksaa13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Kapal Laut"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        app:layout_constraintTop_toBottomOf="@+id/aa1image3"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/aa1image3"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@+id/aa1image3"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/teksaa14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Kapal Selam"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        app:layout_constraintTop_toBottomOf="@+id/aa1image4"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/aa1image4"
        android:layout_marginStart="12dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>