<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apabila kita meremas ujung kantong plastik yang berisi air yang memiliki banyak lubang, air akan memancar dari setiap lubang dengan sama kuat. Mari kita ilustrasikan melalui animasi berikut:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:textSize="12sp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/border_white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView44"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pascal2gif" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pascal2gif"
        app:layout_constraintLeft_toLeftOf="@+id/pascal2gif"
        app:layout_constraintRight_toRightOf="@+id/pascal2gif"
        app:layout_constraintTop_toTopOf="@+id/pascal2gif"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dari animasi, Setelah piston ditekan ke bawah. Amati bagaimana perubahan yang terjadi pada cairan di dalam ke empat pipa kecil?"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/pascal2gif"
        android:layout_marginLeft="8dp"
        android:textSize="13sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/pascal2tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tekanan yang diberikan pada air melalui piston akan diteruskan ke segala arah dengan sama besar. Percobaan ini pertama kalinya ditemukan oleh Blaise Pascal (1623-1662), sehingga disebut Hukum Pascal."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@drawable/border_white"
        android:gravity="center"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />
</android.support.constraint.ConstraintLayout>