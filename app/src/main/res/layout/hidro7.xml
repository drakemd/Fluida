<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apabila selang oksigen yang digunakan oleh penyelam bocor atau terputus, apa yang akan terjadi? Mengapa demikian!"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="#ffff"
        android:drawableRight="@drawable/hmmmm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Penyelam akan mengalami sesak napas bahkan kematian saat selang oksigen bocor atau terputus. Karena penyeleman tidak dapat bernapas, serta air laut akan menekan telinga dan paru-paru, yang menyebabkan penyelam sesak napas."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/border_white"
        android:gravity="center" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32">

        <ImageView
            android:id="@+id/slide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/slide41"
            android:background="@drawable/slide41"/>
        <ImageView
            android:id="@+id/slide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/slide42"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/slide42"/>

    </ViewFlipper>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dari kedua gambar, mengapa para penyelam membawa jumlah tabung oksigen yang berbeda ketika menyelam? Prediksikan alasannya menurut pendapatmu!"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12sp"
        android:textColor="#ffff"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:srcCompat="@color/transparent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        android:background="@drawable/nextselect"
        app:layout_constraintLeft_toRightOf="@+id/viewFlipper"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:srcCompat="@color/transparent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@drawable/prevselect"
        app:layout_constraintRight_toLeftOf="@+id/viewFlipper"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>