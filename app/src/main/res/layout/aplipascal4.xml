<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/aplpascal41"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.055" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Saat piston 1 diberi gaya, gaya tersebut akan diterukan oleh fluida (minyak) yang terdapat di dalam pompa. Akibatnya, minyak dalam dongkrak akan menghasilkan gaya angkat pada piston 2 dan akan mengangkat beban di atasnya."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView22"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"
        android:padding="10dp"
        android:background="@drawable/border_white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dari video dan penjelasan, mengapa untuk mengangkat mobil menggunakan dongkrak hidrolik diperlukan beberapa kali menekan tuas pengungkit? Jelaskan pendapatmu berbantuan gambar di bawah ini!"
        android:textSize="13sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#ffff"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView62"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/aplpascal42"
        android:layout_marginTop="-33dp"
        app:layout_constraintTop_toBottomOf="@+id/textView63"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>