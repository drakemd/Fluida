<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Pada tekanan udara: Semakin tinggi suatu tempat dari permukaan laut maka tekanannya semakin rendah"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="13sp"
        android:padding="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Bagaimana dengan tekanan di dalam zat cair? Apakah sama dengan tekanan udara dan ketinggiannya, bahwa kedalaman suatu zat cair pun akan mempengaruhi tekanan zat cair tersebut?"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/hmmmm"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textSize="12sp"
        android:textColor="#ffff"
        android:background="@android:color/holo_blue_light"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coba amati eksperimen berikut"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:textSize="13sp"
        android:padding="10dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/hidro2anim1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Berdasarkan eksperimen, terlihat bahwa semakin dalam corong masuk ke dalam zat cair semakin tinggi zat cair dalam pipa mengalami kenaikan."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hidro2anim1"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:textSize="13sp"
        android:background="@drawable/border"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hidro2anim1"
        app:layout_constraintLeft_toLeftOf="@+id/hidro2anim1"
        app:layout_constraintRight_toRightOf="@+id/hidro2anim1"
        app:layout_constraintTop_toTopOf="@+id/hidro2anim1"
        app:srcCompat="@drawable/play" />
</android.support.constraint.ConstraintLayout>