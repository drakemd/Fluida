<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="REM HIDROLIK"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView54"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sebagian besar mobil zaman sekarang termasuk kontainer, menggunakan sistem hidrolik pada saat pengereman."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView53"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelaskan bagaimana prinsip kerja rem hidrolik"
        android:layout_marginTop="7dp"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"
        android:textColor="#ffff"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textView54"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perhatikan animasi berikut"
        android:padding="10dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView55" />

    <edu.upi.cs.sukidaa.fluida.CustomVideoView
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="-11dp"
        app:layout_constraintTop_toBottomOf="@+id/textView56"
        android:id="@+id/apli2pvv1"/>

    <TextView
        android:id="@+id/textView57"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rem hidrolik ada yang menggunakan angin dan ada juga yang menggunakan oli, bagaimana perbandingan kinerja keduanya?"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/apli2pvv1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mengapa tidak ada mobil yang rem hidroliknya menggunakan air? Bagaimana apabila oli atau angin diganti dengan air? Jelaskan jawabanmu secara logis!"
        android:layout_marginTop="11dp"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/textView57"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/apl2play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/apli2pvv1"
        app:layout_constraintLeft_toLeftOf="@+id/apli2pvv1"
        app:layout_constraintRight_toRightOf="@+id/apli2pvv1"
        app:layout_constraintTop_toTopOf="@+id/apli2pvv1"
        app:srcCompat="@drawable/play" />
</android.support.constraint.ConstraintLayout>